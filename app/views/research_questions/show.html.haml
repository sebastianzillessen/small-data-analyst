%p#notice= notice

%p
  %b Name:
  = @research_question.name
%p
  %b Description:
  = @research_question.description
%p
  %b Private:
  = @research_question.private
%p
  %b Models:
  .row
    .col-md-6
      .list-group
        - @research_question.models.each do |m|
          =link_to m.name, model_path(m), class: 'list-group-item'
    .col-md-6
      = render 'shared/graph_representation', object: @research_question

- if can? :edit, @research_question
  = link_icon_to 'edit', edit_research_question_path(@research_question), text: 'Edit research question'