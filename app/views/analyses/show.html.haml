.row
  .col-md-6
    .panel.panel-info
      .panel-heading
        Currently Possible Models
      %ul.list-group#possible_models
        = render 'possible_models', analysis: @analysis
  .col-md-6
    .panel.panel-primary
      .panel-heading
        Open Query Assumptions
      %ul.list-group#open_questions
        - @analysis.query_assumption_results.where(result: nil, ignore: false).each do |question|
          %li.list-group-item[question]
            = question.query_assumption.question
            = render "query_assumption_results/form", question: question
        %li.list-group-item.auto-show-empty.text-warning
          No remaining open query assumptions.
.row
  .col-md-6
    .panel.panel-success
      .panel-heading
        Answered Query Assumptions
      %ul.list-group#answered_questions
        - @analysis.query_assumption_results.where.not(result: nil).each do |question|
          = render "answered_question", qar: question
        %li.auto-show-empty.list-group-item
          No answered query assumptions.
  .col-md-6
    .panel.panel-default
      .panel-heading
        Ignored Query Assumptions
      %ul.list-group#ignored_questions
        - @analysis.query_assumption_results.where(ignore: true).each do |question|
          = render "answered_question", qar: question
        %li.list-group-item.auto-show-empty
          No ignored query assumptions.
.row
  .panel.panel-default
    .panel-heading
      Detailed view of models
    %ul.list-group#detailed_model_view
      = render 'analyses/detailed_model_view', analysis: @analysis

- if @analysis.done?
  :javascript
    showDismissableAlert("Analysis is now complete. ", "success");

