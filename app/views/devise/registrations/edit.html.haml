%h2
  Edit #{resource_name.to_s.humanize}
= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = f.inputs do
    = f.input :email, as: :email, input_html: {autofocus:true}, hint: devise_mapping.confirmable? && resource.pending_reconfirmation? ? "Currently waiting confirmation for: #{resource.unconfirmed_email}" : nil
    = f.input :password, as: :password, input_html: {autocomplete:false}, hint: '(leave blank if you don\'t want to change it)'
    = f.input :password_confirmation, as: :password, input_html: {autocomplete:false}
    = f.input :current_password, as: :password, input_html: {autocomplete:false}, hint: '(we need your current password to confirm your changes)'
  = f.actions do
    = f.action :submit, label: 'Update'

%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure that you want to delete your account?" }, method: :delete, class: 'btn btn-danger'}