%h2 Sign up
= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.inputs do
    = f.input :email, as: :email, input_html: {autofocus:true}
    = f.input :password, as: :password, input_html: {autocomplete:false}
    = f.input :password_confirmation, as: :password, input_html: {autocomplete:false}
    = f.label :email
  = f.actions do
    = f.action :submit, label: 'Sign up'

= render "devise/shared/links"
