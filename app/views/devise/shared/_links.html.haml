%br
.btn-group.btn-group-justified
  - if controller_name != 'sessions'
    = button_link_to "Log in", new_session_path(resource_name)
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = button_link_to "Sign up", new_registration_path(resource_name)
.btn-group.btn-group-justified
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = button_link_to "Forgot password?", new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = button_link_to "Confirmation instructions?", new_confirmation_path(resource_name)
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = button_link_to "Unlock instructions?", new_unlock_path(resource_name)
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = button_link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider)
