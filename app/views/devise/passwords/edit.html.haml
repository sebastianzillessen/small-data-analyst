%h2 Change your password
= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.inputs do
    = f.input :reset_password_token, as: :hidden
    = f.input :password, as: :password, input_html: {autocomplete:false, autofocus: true},label: 'New password', hint: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil

    = f.input :password_confirmation, as: :password, input_html: {autocomplete:false},label: 'Confirm new password'
  = f.actions do
    = f.action :submit, label: "Change my password"
= render "devise/shared/links"
