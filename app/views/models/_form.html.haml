= semantic_form_for @model do |f|
  = f.inputs do
    = f.input :name
    = f.input :description
    = f.input :research_questions, :as => :select, :collection => ResearchQuestion.order(:name).all.select { |a| can? :read, a }
    = f.input :assumptions, :as => :select, :collection => Assumption.order(:name).all.select { |a| can? :read, a }.map{|a| [a.to_s, a.id]}

  = f.actions do
    = f.action :submit, :as => :input
