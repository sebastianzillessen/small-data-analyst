%h1 Listing models

%table.table
  %thead
    %tr
      %th Name
      %th Description
      %th Actions

  %tbody
    - @models.each do |model|
      %tr
        %td= model.name
        %td= model.description
        %td
          = button_to model, class: 'btn btn-danger btn-xs pull-right', method: :delete, data:{confirm: 'Are you sure?' ,toggle:'tooltip',placement:'bottom'},title: "Delete" do
            .glyphicon.glyphicon-trash
          = button_to edit_model_path(model), class: 'btn btn-default btn-xs pull-right', data:{toggle:'tooltip',placement:'bottom'},title: "Edit" do
            .glyphicon.glyphicon-edit
          = button_to model, class: 'btn btn-default btn-xs pull-right', data:{toggle:'tooltip',placement:'bottom'},title: "Show" do
            .glyphicon.glyphicon-open

%br

= button_to 'New Model', new_model_path, class: 'btn btn-success pull-right'
